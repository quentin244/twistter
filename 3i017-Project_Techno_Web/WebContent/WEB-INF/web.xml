<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app >
	<filter>
		<filter-name>CorsFilter</filter-name>
		<filter-class>CORSFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet >
		<servlet-name>CreateUser</servlet-name >
		<servlet-class>servlet.user.CreateUser</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>Login</servlet-name >
		<servlet-class>servlet.user.Login</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>Logout</servlet-name >
		<servlet-class>servlet.user.Logout</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>AddFriend</servlet-name >
		<servlet-class>servlet.Relation.AddFriend</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>RemoveFriend</servlet-name >
		<servlet-class>servlet.Relation.RemoveFriend</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>SearchFriend</servlet-name >
		<servlet-class>servlet.Relation.SearchFriend</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>CreateMessage</servlet-name >
		<servlet-class>servlet.Message.CreateMessage</servlet-class >
	</servlet >
	<servlet >
		<servlet-name>ListeMessage</servlet-name >
		<servlet-class>servlet.Message.ListeMessage</servlet-class >
	</servlet >
	
	<servlet-mapping >
		<servlet-name >CreateUser</servlet-name >
		<url-pattern >/servlet/CreateUser</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >Login</servlet-name >
		<url-pattern >/servlet/Login</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >Logout</servlet-name >
		<url-pattern >/servlet/Logout</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >AddFriend</servlet-name >
		<url-pattern >/servlet/AddFriend</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >RemoveFriend</servlet-name >
		<url-pattern >/servlet/RemoveFriend</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >SearchFriend</servlet-name >
		<url-pattern >/servlet/SearchFriend</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >CreateMessage</servlet-name >
		<url-pattern >/servlet/CreateMessage</url-pattern >
	</servlet-mapping >
	<servlet-mapping >
		<servlet-name >ListeMessage</servlet-name >
		<url-pattern >/servlet/ListeMessage</url-pattern >
	</servlet-mapping >

</web-app >





